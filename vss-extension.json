{
    "manifestVersion": 1,
    "id": "DataFactoryTools",
    "name": "Validate ADF code",
    "version": "1.0.2",
    "publisher": "ADFvalidation",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ], 
    "tags": [
        "Extension",
        "Marketplace",
        "DevOps",
        "Azure Data Factory"
      ],
    "description": "Validates all JSON files of ADF (v2) .",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "public": true,
    "files": [
        {
            "path": "adfValidateTask"
        },
        {
            "path":"images",
            "addressable":true
        }
    ],
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "license"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/uedring/azure.datafactory.devops"
    },
    "links": {
        "support": {
          "uri": "https://github.com/uedring/azure.datafactory.devops/issues"
        }
    },
    "contributions": [
        {
            "id": "ValidateADF",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "adfValidateTask"
            }
        }
    ]
}